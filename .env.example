# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Supabase Service Role Key (server-side only, never expose to client)
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Stripe Configuration (for subscription billing)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Webhook Secret (from https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Pricing Table ID (from https://dashboard.stripe.com/pricing-tables)
NEXT_PUBLIC_STRIPE_PRICING_TABLE_ID=prctbl_...

# Google Analytics (https://analytics.google.com)
# Create a GA4 property and get the Measurement ID (starts with G-)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (https://sentry.io)
# Create a project at sentry.io and get these values
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/your-project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
# Optional: Auth token for source map uploads (from Settings > Auth Tokens)
# SENTRY_AUTH_TOKEN=sntrys_...

# Optional: Stripe Price IDs for each plan (if using custom checkout)
# STRIPE_STARTER_MONTHLY_PRICE_ID=price_...
# STRIPE_STARTER_ANNUAL_PRICE_ID=price_...
# STRIPE_TEAM_MONTHLY_PRICE_ID=price_...
# STRIPE_TEAM_ANNUAL_PRICE_ID=price_...
# STRIPE_BUSINESS_MONTHLY_PRICE_ID=price_...
# STRIPE_BUSINESS_ANNUAL_PRICE_ID=price_...

# SMTP Email Configuration
# Required for email features (alerts, invitations, notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=StockZip <noreply@stockzip.com>

# Admin Notifications
# Email address to receive admin alerts (new signups, bug reports)
ADMIN_EMAIL=your-email@example.com

# Supabase Auth Webhook Secret (for signup notifications)
# Generate a random secret and configure it in Supabase Dashboard > Database > Webhooks
SUPABASE_AUTH_WEBHOOK_SECRET=your-webhook-secret
